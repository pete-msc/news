  <body>

    <div class="container mt-5">
    <div class="card">
    <div class="card-header">
      <h1>Location = <%= @location %></h1>
    </div>
    <div class="card-body">
      <h5 class="card-title"><strong>Latitude & Longitude:</strong> <%= @geocode_lat %>, <%= @geocode_long %></h5>
      <h5 class="card-text"> <strong>Current Forecast:</strong>
  <%= "In #{@location}, it is currently #{@current_temperature} degrees and #{@current_summary}." %></h5>
      <a href="/" class="btn btn-primary">Change Location</a>
    </div>
  </div>
  </div>


  <div class="container mt-5">
<div class="card">
  <div class="card-header">
    <h1>Five Day Forecast</h1>
  </div>
  <div class="card-body">
    <h5 class="card-title"><strong>Day 1:</strong> <%=
"A high temperature of #{@forecast_daily[0]["temperatureHigh"]} and #{@forecast_daily[0]["summary"].downcase}"
%></h5> 
